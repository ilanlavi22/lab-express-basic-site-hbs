<h1>{{title}}</h1>
<p>{{name}} born ({{bornYear}}) in {{city}}</p>
<p>{{bio}}</p>

<ul class="booklist">
  {{#each books}}
    <li>
      <p>{{name}}, {{pages}} pages, Rating: {{rating}}</p>
      <p>{{genres}}</p>
      {{#if isBestSeller}}
        <p>Best Seller</p>
      {{else}}
        <p>Unknown</p>
      {{/if}}
    </li>
  {{/each}}
</ul>